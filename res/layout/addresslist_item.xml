<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/addresslist_item_add"
              android:text="@string/add"
              android:layout_centerInParent="true"
              android:textSize="16sp"
              android:padding="10dip"
              android:visibility="gone"
            />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addresslist_item_layout"
            >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dip"
                  android:layout_marginTop="10dip"
                  android:id="@+id/addresslist_item_name"
                  android:textSize="18sp"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/addresslist_item_name"
                  android:layout_marginLeft="15dip"
                  android:layout_alignBaseline="@+id/addresslist_item_name"
                  android:textSize="16sp"
                  android:id="@+id/addresslist_item_job"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dip"
                  android:layout_marginTop="10dip"
                  android:layout_marginBottom="10dip"
                  android:id="@+id/addresslist_item_mobilephone"
                  android:layout_below="@+id/addresslist_item_name"
                  android:textSize="16sp"
                />
    </RelativeLayout>

</RelativeLayout>